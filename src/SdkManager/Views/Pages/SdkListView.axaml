<views:NavigatableUserControl xmlns="https://github.com/avaloniaui"
                              xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                              xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                              xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                              xmlns:views="clr-namespace:SdkManager.Views"
                              xmlns:pages="clr-namespace:SdkManager.ViewModels.Pages"
                              xmlns:models="clr-namespace:CliWrapper.Models;assembly=CliWrapper"
                              x:DataType="pages:SdkListViewModel"
                              mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
                              x:Class="SdkManager.Views.Pages.SdkListView">

    <ListBox ItemsSource="{Binding Sdks}" DoubleTapped="OnListItemDoubleClicked" SelectionMode="Single" SelectedValue="{Binding SelectedSdk}">
        <ListBox.ItemTemplate>
            <DataTemplate x:DataType="models:InstalledSdk">
                <StackPanel Orientation="Horizontal">
                    <Label Content="{Binding Version}" />
                    <Label Content="{Binding InstallationPath}" />
                </StackPanel>
            </DataTemplate>
        </ListBox.ItemTemplate>
    </ListBox>

</views:NavigatableUserControl>